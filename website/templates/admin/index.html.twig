{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    <div class="row">
        <div class="col-xl-12 col-md-12">
            Etat des machines
{#            {{ dump(machine) }}#}
{#            {{ dump(ssh) }}#}

            <table class="table table-striped">
              <thead>
                <tr>
                    <th>Id</th>
                    <th>Serveur</th>
                    <th>Ram</th>
                    <th>Cpu</th>
                    <th>Disk</th>
                    <th>Action</th>
                </tr>
              </thead>
                <tbody>
                {% for row in ssh %}


                    <tr>
                        <td>{{ row.id }}</td>
                        <td>{{ row.server.nom }}</td>
                        <td class="ram"><span id="{{ row.id }}"></span></td>
                        <td><span id="uptime{{ row.id }}"></span>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </td>
                        <td><span id="disk{{ row.id }}"></span></td>
                        <td>
                            <a href="{{ path('app_server_show', {'id': row.server.id}) }}">show</a>
                            <a href="{{ path('app_server_edit', {'id': row.server.id}) }}">edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
