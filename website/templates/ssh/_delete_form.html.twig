<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<title>{{ cv.title }}</title>
		<style>
			body{margin:0;font-family:-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol";font-size:1.3rem;font-weight:350;height:100%;color:#212529;text-align:left;background-color:#fff;line-height:1.3}
p{margin-top:0;margin-bottom:.7rem}
hr{margin-top:1rem;margin-bottom:1rem;border:0;border-top:1px solid rgba(0,0,0,.1)}
.img-fluid{max-width:100%;height:auto}
img{vertical-align:middle;border-style:none}
.text-justify{text-align:justify!important}
*,::after,::before{box-sizing:border-box}
.row{display:-webkit-box;display:-ms-flexbox;display:flex;-ms-flex-wrap:wrap;flex-wrap:wrap;margin-right:-15px;margin-left:-15px}
.font-italic{font-style:italic!important}
a{color:#007bff;text-decoration:none}
*{margin:0;padding:0}
h3{text-align:left;margin-bottom:.5rem;font-family:inherit;font-weight:500;font-size:1.85rem!important;margin-top:0;line-height:1.3}
ul{display:block;list-style-type:disc;margin-block-start:1em;margin-block-end:1em;margin-inline-start:0;margin-inline-end:0;padding-inline-start:40px;padding-left:40px}
li{display:list-item;text-align:-webkit-match-parent}
.row{position:relative;width:100%}
.col-lg-4{position:relative;padding-right:15px;display:block;width:33%;margin-right:-25%;padding-left:35px;float:left;page-break-inside:avoid;background-color:beige;padding-top:20px;height:1403px;min-height:100%;line-height:1.4}
.col-lg-8{display:block;position:relative;margin-left:27%;padding-left:0;padding-right:0;float:left;width:63%;text-align:left;padding-top:20px;height:1403px;min-height:100%}
.rounded{border-radius:75px 75px 75px 75px;opacity:100%}
.sociaux{float:right}
.about-img{text-align:center;padding:7px}
.hrcv{background-color:#007bff;height:3px}
		</style>
	</head>
	<body>
		<div class="row">
			<div class="col-lg-4">
				<div class="about-img">
					{% if app.user.photo is not null %}
						<img class="img-fluid" src="" alt="">
						<img class="rounded" src="{{ app.request.schemeAndHttpHost }}/assets/file/{{ app.user.photo }}" alt="" width="150">
					{% endif %}
				</div>
				{% for row in cv.bloccvs %}
					{% if row.emplacement =="left" %}
						<h3>{{ row.title|upper }}</h3>
						<hr class="hrcv">
						{{ row.content|replace({'../..':app.request.schemeAndHttpHost})|raw }}
					{% endif %}
				{% endfor %}
			</div>
			<div class="col-lg-8">

				<h3 style="color:#007bff;font-weight: 600!important;margin-bottom: 35px!important;font-size: 2.1rem!important;">{{ cv.title }}</h3>

				<span class="sociaux" style="margin-top: 7px">

					<img src="" alt="">
					<a href="{{ app.request.schemeAndHttpHost }}" target="_blank" rel="noopener">
						<img class="img-fluid" src="{{ app.request.schemeAndHttpHost }}/assets/file/world-wide-web.png" alt="{{ app.request.schemeAndHttpHost }}" width="30"></a>
					<a title="github" href="{{ app.user.github }}" target="_blank" rel="noopener"><img class="img-fluid" src="{{ app.request.schemeAndHttpHost }}/assets/file/1200px-Octicons-mark-github.svg[1].png" alt="" width="30">
					</a>
					<a title="linkedin" href="{{ app.user.linkedin }}" target="_blank" rel="noopener"><img class="img-fluid" src="{{ app.request.schemeAndHttpHost }}/assets/file/linkedin1-min.png" alt="" width="37"></a>
				</span>
				<div style="top: 158px;right: 0px;position: absolute;">
					<img src="https://chart.googleapis.com/chart?chs=150x150&cht=qr&chl={{ app.request.schemeAndHttpHost }}&choe=UTF-8" width="150" height="150">
				</div>
				{% for row in cv.bloccvs %}
					{% if row.emplacement =="right" %}
						<h3>{{ row.title|upper }}</h3>
						<hr class="hrcv">
						{{ row.content|replace({'../..':app.request.schemeAndHttpHost})|raw }}
					{% endif %}
				{% endfor %}

			</div>
		</div>
	</body>
</html>
